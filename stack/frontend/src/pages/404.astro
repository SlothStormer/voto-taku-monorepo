---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 No Encontrado">
  <div
    class="bg-violet-200 backdrop-blur-lg p-6 rounded-2xl shadow-lg text-center max-w-md w-full h-2/3 flex flex-col items-center justify-between"
  >
    <div class="mb-6">
      <h1 class="text-6xl font-bold text-white">404 :(</h1>
      <p class="text-2xl text-gray-300 mt-2">Pagina no encontrada</p>
    </div>

    <img
      src="yanami2.gif"
      alt="Yanami gif :D"
      class="w-64 h-auto mx-auto rounded-lg border-4 border-violet-500 shadow-md hover:scale-105 transition-transform duration-300 mb-6"
    />

    <a
      href="/"
      class="inline-block bg-violet-600 text-white text-lg font-semibold px-6 py-3 rounded-lg hover:bg-violet-500 hover:shadow-lg transition-all duration-200"
    >
      Volver al inicio
    </a>
  </div>
</Layout>
