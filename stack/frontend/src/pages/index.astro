---
import VideoBG from "../components/VideoBG.astro";
import Layout from "../layouts/Layout.astro";
import topOpenings from "../data/ops.json";

const cards = [
  {
    title: "Openings",
    description: "Vota por el mejor opening",
    href: "/openings",
    img: "yoasobi-oshi-no-ko-theme-song.jpg",
  },
  {
    title: "Endings",
    description: "Vota por el mejor ending",
    href: "/endings",
    img: "fireforce-veil.gif",
  },
];
---

<Layout title="Inicio">
  <VideoBG />
    <div class="text-center mb-8">
      <h1 class="text-5xl md:text-6xl font-bold">
        Bienvenido a
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-white via-accent-light to-accent whitespace-nowrap">
          Voto-Taku
        </span>
      </h1>
    </div>
    <div class="flex flex-wrap justify-center gap-8 mb-8 px-4">
      {cards.map((card) => (
        <a
          href={card.href}
          class="w-full max-w-sm bg-accent-dark/80 border border-accent-light/25 rounded-2xl text-white hover:-translate-y-1 hover:shadow-lg hover:shadow-accent/30 transition-all backdrop-blur-xl"
          data-astro-prefetch="load"
        >
          <img src={card.img} class=" rounded-t-2xl" alt="" />
          <div class="px-4 py-2">
            <h2 class="text-2xl md:text-4xl text-accent-light">{card.title}</h2>
            <p class="text-gray-400">{card.description}</p>
          </div>
          {/* <div class="text-5xl">{card.emoji}</div> */}
        </a>
      ))}
    </div>
    <div class="grid md:grid-cols-2 gap-8">
      <div class="bg-accent-dark/80 border  border-accent-light/25 rounded-2xl p-6 h-96 backdrop-blur-lg">
        <h3 class="text-center mb-4 text-accent-light text-xl md:text-2xl">
          Top Openings
        </h3>
        <div class="slider-container overflow-hidden h-24 relative">
          <ul id="slider" class="text-white">
            {topOpenings.map((item, index) => (
              <li
                class="slider-item flex justify-between items-center mb-2"
              >
                <span class="font-bold text-sm md:text-base">{index}</span>
                <span class="font-bold text-sm md:text-base">{item.title}</span>
                <span class="block text-accent-light text-xs md:text-sm">
                  {item.grade}
                </span>
              </li>
            ))}
          </ul>
        </div>
      </div>
      <div class="bg-accent-dark/80 border border-accent-light/25 rounded-2xl p-6 h-full backdrop-blur-lg">
        <h3 class="text-center mb-4 text-accent-light text-xl md:text-2xl">
          Top Endings
        </h3>
        <h4 class="text-center">AÃºn no hay ranking de endings...</h4>
      </div>
    </div>
</Layout>

<style>
@import "../styles/index.css";
</style>
